<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/image_product_thumbnail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/image_detail"
        android:scaleType="centerCrop"
        android:background="#EEEEEE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Product Name A"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/image_product_thumbnail"
        app:layout_constraintTop_toTopOf="@id/image_product_thumbnail"
        app:layout_constraintEnd_toStartOf="@id/text_product_quantity"/>

    <TextView
        android:id="@+id/text_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price: 500,000 VND"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="@id/text_product_name"
        app:layout_constraintTop_toBottomOf="@id/text_product_name"
        app:layout_constraintBottom_toBottomOf="@id/image_product_thumbnail"
        app:layout_constraintEnd_toStartOf="@id/text_product_subtotal"/>

    <TextView
        android:id="@+id/text_product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 2"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_product_name" />

    <TextView
        android:id="@+id/text_product_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000,000 VND"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_product_price" />

</androidx.constraintlayout.widget.ConstraintLayout>